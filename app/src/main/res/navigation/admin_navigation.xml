<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin_navigation"
    app:startDestination="@id/adminDoctorFragment">

    <fragment
        android:id="@+id/adminDoctorFragment"
        android:name="com.example.hospitalapplication.hospital_application.AdminDoctorFragment"
        android:label="fragment_admin_doctor"
        tools:layout="@layout/fragment_admin_doctor" >
        <action
            android:id="@+id/action_adminDoctorFragment_to_adminAppointmentFragment"
            app:destination="@id/adminAppointmentFragment" />
        <action
            android:id="@+id/action_adminDoctorFragment_to_adminTestReportFragment"
            app:destination="@id/adminTestReportFragment" />
        <action
            android:id="@+id/action_adminDoctorFragment_to_adminTestrpFragment"
            app:destination="@id/adminTestrpFragment" />
    </fragment>
    <fragment
        android:id="@+id/adminAppointmentFragment"
        android:name="com.example.hospitalapplication.hospital_application.AdminAppointmentFragment"
        android:label="fragment_admin_appointment"
        tools:layout="@layout/fragment_admin_appointment" >
        <action
            android:id="@+id/action_adminAppointmentFragment_to_adminDoctorFragment"
            app:destination="@id/adminDoctorFragment" />
        <action
            android:id="@+id/action_adminAppointmentFragment_to_adminTestReportFragment"
            app:destination="@id/adminTestReportFragment" />
    </fragment>
    <fragment
        android:id="@+id/adminTestReportFragment"
        android:name="com.example.hospitalapplication.hospital_application.AdminTestReportFragment"
        android:label="fragment_admin_test_report"
        tools:layout="@layout/fragment_admin_test_report" >
        <action
            android:id="@+id/action_adminTestReportFragment_to_adminDoctorFragment"
            app:destination="@id/adminDoctorFragment" />
        <action
            android:id="@+id/action_adminTestReportFragment_to_adminAppointmentFragment"
            app:destination="@id/adminAppointmentFragment" />
    </fragment>
    <fragment
        android:id="@+id/adminTestrpFragment"
        android:name="com.example.hospitalapplication.hospital_application.AdminTestrpFragment"
        android:label="fragment_admin_testrp"
        tools:layout="@layout/fragment_admin_testrp" />
</navigation>