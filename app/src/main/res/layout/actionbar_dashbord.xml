        app:navigationIcon="@drawable/icon_menu_24"
        app:navigationIconTint="@color/white"
        android:background="@drawable/toolbarwallpaper"
        app:menu="@menu/right_menu"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

