<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvpro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="Edit Profile"
        android:textSize="18dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ivproflie01"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvpro"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="10dp">

        <ImageView
            android:id="@+id/ivproflieuser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_person"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvphoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivproflie01"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Update Profile Photo"
        android:textColor="#1282a2"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_user_id"
        app:startIconTint="#168aad"
        android:hint="Name"
        android:textColorHint="#adb5bd"
        app:boxStrokeColor="#1282a2"
        app:hintTextColor="#1282a2"
        android:layout_below="@id/tvphoto"
        android:gravity="center"
        android:layout_marginTop="20dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_email"
        app:startIconTint="#168aad"
        android:hint="Gmail Id"
        android:textColorHint="#adb5bd"
        app:boxStrokeColor="#1282a2"
        app:hintTextColor="#1282a2"
        android:layout_below="@id/nameTV"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

</RelativeLayout>