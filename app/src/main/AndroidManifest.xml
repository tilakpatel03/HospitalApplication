<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hospitalapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_healthcare"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_healthcare_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HospitalApplication">
        <activity
            android:name=".hospital_application.DoctorDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".hospital_application.doctor_activity.DoctorActivity"
            android:exported="false" />
        <activity
            android:name=".hospital_application.SeeDocListActivity"
            android:exported="false" />
        <activity
            android:name=".hospital_application.admin.AdminActivity"
            android:exported="true" />
        <activity
            android:name=".hospital_application.DashboardActivity"
            android:exported="false" />
        <activity
            android:name=".hospital_application.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".hospital_application.authentication.UserActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>